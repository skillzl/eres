<%- include("../partials/header") %>

<title><%= bot.user.username.toLowerCase() %>.lol - servers</title>

<div class="text-center text-white text-4xl font-bold font-mono pt-10 pb-10">
    <h1>
        <%- __('WEB.DASHBOARD_SERVER_TITLE')%> <span class="text-green-400"><%- __('WEB.DASHBOARD_SERVER_SELECT')%></span>
    </h1>
</div>
<div class="flex flex-wrap items-center justify-center space-x-4 space-y-4 md:space-y-0 pr-2 pd-2">
    <% for (let guild of guilds) { %>
        <a href="/dashboard/server/<%= guild.id %>" class="w-full md:w-auto mb-4 md:mb-0">
            <div class="w-full h-64 bg-center bg-cover rounded-lg shadow-md" style="background-image: url(<%= guild.icon ? `https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}` : 'https://i.imgur.com/RO3uUxX.png' %>)"></div>
            <div class="w-full -mt-10 overflow-hidden bg-gray-900 rounded-t-xl shadow-lg md:w-64">
                <h3 class="py-2 font-bold tracking-wide text-center text-gray-800 uppercase dark:text-white"><%= guild.name %></h3>
                <div class="flex items-center justify-between px-3 py-2 bg-gray-700">
                    <button class="px-2 py-1 text-xs font-semibold text-white uppercase transition-colors duration-300 transform bg-gray-800 rounded hover:bg-gray-700 dark:hover:bg-gray-600 focus:bg-gray-700 dark:focus:bg-gray-600 focus:outline-none"><%= bot.guilds.cache.get(guild.id) ? `${__('WEB.DASHBOARD_MANAGE_SERVER')}` : `${__('WEB.DASHBOARD_INVITE_BOT')}` %></button>
                </div>
            </div>
        </a>
    <% } %>
</div>

<%- include("../partials/footer") %>